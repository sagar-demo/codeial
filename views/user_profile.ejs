        <link rel="stylesheet" href="/css/user_profile.css">
        <img src="<%=user.avatar%>" alt="<%=user.name%>"width="100">&nbsp;&nbsp;&nbsp;&nbsp;



    <%if(user.id==profile_user.id){%>
        <!-- if user matches then show the form -->
        <form action="/users/update/<%=profile_user.id%>" method="POST"enctype="multipart/form-data">
            <input type="text"name="name"placeholder="Your Name"required value="<%=profile_user.name%>">
            <input type="email"name="email"placeholder="Your Email"required value="<%=profile_user.email%>">
            <input type="file"name="avatar"placeholder="Profile Picture"required>
            <input type="submit" value="Update">
        </form>
        <%}else{%>
            <!-- else show only the profile info -->
            
        <p><%= profile_user.name %></p>
        <p><%= profile_user.email %></p>
            <%}%>
